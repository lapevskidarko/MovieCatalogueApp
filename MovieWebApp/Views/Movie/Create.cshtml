@model MovieWebApp.Models.ViewModels.MovieViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MovieImage" class="control-label"></label>
                <input asp-for="MovieImage" class="form-control" />
                <span asp-validation-for="MovieImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.SelectedGenresIds,new MultiSelectList(Model.Genres, "Value", "Text"), new { @class = "form-control", multiple = "multiple", id = "genres" })  
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.SelectedPersonIds,new MultiSelectList(Model.People, "Value", "Text"), new { @class = "form-control", multiple = "multiple", id = "cast" })  
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>  
        $(document).ready(function () {  
            $('#genres').multiselect(); 
            $('#cast').multiselect(); 
        });  
    </script> 
}
