@model List<MovieWebApp.Models.Domain.Movie>
@{
    ViewData["Title"] = "Index";
}

<div class = "container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Movie" asp-action="Create">Add new Product</a>
    </div>

     @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
        }
     <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: auto;">
                <img class="card-img-top" src="@item.MovieImage" style="height: 18rem;" alt="Image for product" />

                <div class="card-body">
                    <h3 class="card-title">@item.Name</h3>
                    <p class="card-text">@item.Description</p>
                </div>

                 <div class="card-footer">

                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    
                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">Delete</a>

                </div>

                </div>
                </div>
    }

</div>

